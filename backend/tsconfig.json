{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "allowJs": true,

    /* Emit */
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false,
    
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}